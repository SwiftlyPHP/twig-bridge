{
    "name": "swiftly/twig-bridge",
    "description": "Bridging library, allowing you to use Twig templates in your Swiftly projects.",
    "homepage": "https://github.com/SwiftlyPHP/timber-bridge",
    "readme": "README.md",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8",
        "twig/twig": "^3.3",
        "swiftly/template": "1.0.0-beta"
    },
    "require-dev": {
        "vimeo/psalm": "^4.8",
        "phpunit/phpunit": "^9.5",
        "swiftly/config": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Swiftly\\TwigBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swiftly\\TwigBridge\\Tests\\": "tests/"
        }
    }
}
